@model ComentarioViewModel;

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Deixe seu comentário</h5>
    </div>
    <div class="card-body">
        <form asp-controller="Comentario" asp-action="Create" id="FormNovoComentario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" id="Id" value="@Model.Id" name="Id"/>
                <input type="hidden" asp-for="PostId" value="@ViewData["PostId"]"/>
                <textarea asp-for="Conteudo" class="form-control" rows="3" placeholder="Escreva seu comentário aqui..."></textarea>
                <span asp-validation-for="Conteudo" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>

<div id="errors"></div>
<script src="js/form-novo-comentario.js" defer=""></script>


