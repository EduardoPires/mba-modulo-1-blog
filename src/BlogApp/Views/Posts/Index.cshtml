@using BlogCore.Business.Interfaces
@model IEnumerable<PostViewModel>
@inject IAppIdentityUser userApp;
@{
    ViewData["Title"] = "Posts";
}
@{
    ViewData["Title"] = "Todos as Posts";
}
<div class="container mt-5">
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">NOVO POST</a>
    </div>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-12 mb-3">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title">@post.Titulo</h5>
                    </div>

                    <div class="card-body">
                        <p class="card-text">
                            @(post.Conteudo is { Length: > 99 } ? post.Conteudo[..99] + "..." : post.Conteudo) 
                        </p>
                        <div class="justify-content-end">
                            <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-outline-success">LER MAIS</a>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <small class="text-muted">Por @post.Autor?.Usuario?.UserName</small>
                        <small class="text-muted">Publicado em @post.DataPublicacao?.ToShortDateString()</small>
                        @if(userApp.IsOwnerOrAdmin(post.Autor?.UsuarioId))
                        {
                            <div class="d-flex gap-1">
                                <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                                <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>